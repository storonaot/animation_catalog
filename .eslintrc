{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "extends": [
    "airbnb",
    "plugin:flowtype/recommended"
  ],
  "rules": {
    "flowtype/no-types-missing-file-annotation": 0,
    "no-underscore-dangle": [
      "error",
      {
        "allow": [
          "_id",
          "_to",
          "_from",
          "_patient",
          "_doctor"
        ]
      }
    ],
    "no-useless-escape": 2,
    "semi": [
      2,
      "never"
    ],
    "no-console": [
      "off",
      {
        "allow": [
          "warn",
          "error"
        ]
      }
    ],
    "import/no-extraneous-dependencies": "off",
    "import/no-unresolved": "off",
    "import/extensions": "off",
    "react/no-danger": "off",
    "react/jsx-filename-extension": [
      1,
      {
        "extensions": [
          ".js",
          ".jsx"
        ]
      }
    ],
    "comma-dangle": [
      "error",
      "never"
    ],
    "jsx-a11y/href-no-hash": "off"
  },
  "globals": {
    "React": true,
    "_": true,
    "PropTypes": true,
    "axios": true,
    "System": true
  },
  "env": {
    "browser": true,
    "es6": true
  },
  "plugins": [
    "react",
    "jsx-a11y",
    "import",
    "flowtype"
  ]
}